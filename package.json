{
  "name": "blaze-engine",
  "version": "0.0.1",
  "author": "Freddie Nelson <freddie0208@hotmail.com> (https://freddienelson.co.uk)",
  "description": "A fast and simple WebGL 2 voxel game engine written in TypeScript",
  "keywords": [
    "webgl",
    "webgl2",
    "voxel",
    "game",
    "gamedev",
    "3d",
    "game-engine",
    "engine",
    "typescript"
  ],
  "homepage": "https://github.com/freddie-nelson/blaze",
  "repository": {
    "type": "git",
    "url": "https://github.com/freddie-nelson/blaze"
  },
  "bugs": {
    "email": "freddie0208@hotmail.com",
    "url": "https://github.com/freddie-nelson/blaze/issues"
  },
  "main": "lib/blaze.js",
  "files": [
    "lib",
    "lib-esm",
    "_bundles",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "shx rm -rf lib",
    "postbuild": "node ./replaceShaders.js && shx cp -R ./includes ./lib/includes",
    "lib:build": "npm run clean && tsc && webpack && npm run postbuild",
    "lib:dev": "npm run clean && tsc-watch --onSuccess 'npm run postbuild'",
    "dev": "webpack watch --config dev/webpack.config.js",
    "dev:production": "npm run lib:dev & npm run dev \n wait; npm run dev:kill",
    "dev:kill": "kill %1",
    "docs:deps": "cd ./docs && yarn",
    "docs:build": "yarn docs:deps && mkdir -p docs/docs && cd ./docs && yarn build",
    "docs:serve": "yarn docs:deps && mkdir -p docs/docs && cd ./docs && yarn start",
    "example:build": "node buildExample.js",
    "example:serve": "node runExample.js"
  },
  "dependencies": {},
  "devDependencies": {
    "gl-matrix": "^3.4.3",
    "nodemon": "^2.0.13",
    "raw-loader": "^4.0.2",
    "shx": "^0.3.3",
    "ts-loader": "^8.1.0",
    "ts-node": "^10.2.1",
    "tsc": "^2.0.3",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.2.4",
    "webpack": "^5.33.2",
    "webpack-cli": "^4.6.0"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14"
  }
}
